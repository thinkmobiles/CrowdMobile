<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/compose_background"
    android:weightSum="4"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
            android:background="@null"
            android:id="@+id/edMessage"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textColor="@color/apptextcolor"
            android:textColorHint="@color/apptextcolorhint"
            android:hint="@string/compose_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/buttonHolder"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_alignParentLeft="true"
                android:id="@+id/imgCamera"
                android:src="@drawable/ic_tabbar_post"
                android:layout_width="@dimen/compose_buttonheight"
                android:layout_height="@dimen/compose_buttonheight" />
            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/imgPost"
                android:background="#666"
                android:src="@drawable/ic_post_send"
                android:layout_width="@dimen/compose_buttonheight"
                android:layout_height="@dimen/compose_buttonheight" />

        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/holderImage"
            android:layout_alignParentTop="true"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/imgPreview"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/ivPreviewClose"
                android:layout_marginRight="@dimen/imgclosespace"
                android:layout_marginTop="@dimen/imgclosespace"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_post_remove_image"
                android:layout_width="@dimen/imgclose"
                android:layout_height="@dimen/imgclose" />
        </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>