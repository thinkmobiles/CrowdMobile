<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/tabsSocial"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/navbarbackground"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/btnFacebook"
            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/facebook_small"
            android:layout_gravity="center_horizontal" />
        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/navbarseparator"/>
        <ImageView
            android:id="@+id/btnTwitter"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/twitter_small"
            android:layout_gravity="center_horizontal" />
        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/navbarseparator"/>
        <ImageView
            android:id="@+id/btnYoutube"
            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/youtube_small"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/fragment_feed"
        android:layout_toRightOf="@+id/tabsSocial">

    </include>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnArrowRight"
        android:layout_toRightOf="@+id/tabsSocial"
        android:src="@drawable/arrow_right"
        android:layout_margin="10dp"
        android:visibility="gone" />

</RelativeLayout>