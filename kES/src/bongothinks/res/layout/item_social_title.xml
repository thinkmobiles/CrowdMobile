<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/share_closed_height"
    android:paddingLeft="@dimen/item_header_sidepadding"
    android:paddingRight="@dimen/item_header_sidepadding"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="@dimen/item_header_icon_margin"
        android:paddingBottom="@dimen/item_header_icon_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_feed_item_header_icon"
                             android:layout_width="@dimen/abc_action_bar_default_height_material"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvNameOwner"
                android:textStyle="bold"
                android:textColor="@color/questionFont"
                android:paddingLeft="@dimen/item_header_sidepadding"
                android:text="35 min"
                android:layout_toRightOf="@id/imgAvatar"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/createDate"
            android:textStyle="bold"
            android:textColor="@color/questionFont"
            android:paddingLeft="@dimen/item_header_sidepadding"
            android:text="35 min"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/messagePlaceholder"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:visibility="gone"/>
        <TextView
            android:padding="@dimen/item_header_icon_margin"
            android:textColor="@color/questionFont"
            android:id="@+id/tvMessage"
            android:maxLines="4"
            android:ellipsize="end"
            android:textSize="@dimen/item_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
