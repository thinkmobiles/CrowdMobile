<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="@dimen/navbar_elevation"
    android:orientation="vertical"
    android:background="@color/navbarbackground"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_gravity="clip_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="@dimen/navbar_height">

    <ImageView
        android:id="@+id/btFeed"
        android:src="@drawable/ic_tabbar_newsfeed"
        android:paddingTop="@dimen/navbar_padding"
        android:paddingBottom="@dimen/navbar_padding"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="match_parent" />
    <View
        android:background="@color/navbarseparator"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/btMyFeed"
            android:src="@drawable/ic_tabbar_myfeed"
            android:paddingTop="@dimen/navbar_padding"
            android:paddingBottom="@dimen/navbar_padding"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/navbar_indicator_padding"
            android:paddingBottom="@dimen/navbar_indicator_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvUnreadCount"
            android:background="@drawable/navbar_indicator_background"
            android:paddingLeft="@dimen/navbar_indicator_font_padding"
            android:paddingRight="@dimen/navbar_indicator_font_padding"
            android:textColor="@color/unreadcounttext"
            android:text="5"
            android:textSize="@dimen/navbar_indicator_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:background="@color/navbarseparator"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/btCompose"
        android:src="@drawable/ic_tabbar_post"
        android:paddingTop="@dimen/navbar_padding"
        android:paddingBottom="@dimen/navbar_padding"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="match_parent" />
    <View
        android:background="@color/navbarseparator"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/btCheckout"
        android:src="@drawable/ic_tabbar_shop"
        android:paddingTop="@dimen/navbar_padding"
        android:paddingBottom="@dimen/navbar_padding"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
